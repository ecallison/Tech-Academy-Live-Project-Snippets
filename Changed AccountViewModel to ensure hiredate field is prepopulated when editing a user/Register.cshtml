 <div class="form-group">
        @Html.LabelFor(m => m.HireDate, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.HireDate , new { @class = "form-control default-date-picker" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.HourlyPayRate, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.HourlyPayRate, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Fulltime, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.CheckBoxFor(m => m.Fulltime, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("User Roles", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("UserRoles", ViewBag.Name as SelectList, "Select User Role")
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>